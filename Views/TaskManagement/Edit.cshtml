@model TaskManagementSystem.Models.TaskModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Task</h2>
<hr />
<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="col-md-4">

        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" name="Title" class="form-control" value="@Model.Title" />
    
        </div>

       
        <div class="form-group">
            <label asp-for="StatusId" class="control-label">Status</label>
            <select asp-for="StatusId" asp-items="@((IEnumerable<SelectListItem>)ViewData["StatusOptions"])" class="form-control"></select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Deadline" class="control-label">Due Date</label>
            <input asp-for="Deadline" name="Deadline" type="date" class="form-control" value="@Model.Deadline.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="control-label">Comment</label>
            <input asp-for="Comment" name="Comment" class="form-control" value="@Model.Comment" />
        </div>


       
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="/TaskManagement/Dashboard" class="btn btn-default">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
