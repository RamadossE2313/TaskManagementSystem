@model IEnumerable<TaskManagementSystem.Models.DashboardModel>

<h2>Dashboard</h2>

<p>
    @Html.ActionLink("Add Task", "AddTask")
</p>

<div class="form-group">
    <input type="text" class="form-control" id="searchInput" placeholder="Search...">
</div>

<table id="taskTable" class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Deadline</th>
            <th>Assigned Users</th>
            <th>Comments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td style="color: @(item.Status == "Done" ? "green" : item.Status == "Pending" ? "orange" : "")">@item.Status</td>
                <td>@item.Deadline.ToShortDateString()</td>
                <td>@item.AssignedUsers</td>
                <td>@item.Comment</td>
                <td class="action-buttons">
                    @using (Html.BeginForm("Edit", "TaskManagement", new { id = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-primary">Edit</button>
                    }
                    @using (Html.BeginForm("Details", "TaskManagement", new { id = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-info">Details</button>
                    }
                    @using (Html.BeginForm("Delete", "TaskManagement", new { id = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Check if the URL contains a success parameter
            var urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('success')) {
                // Show the popup
                $('#popup').show();
                // Hide the popup after 3 seconds (3000 milliseconds)
                setTimeout(function () {
                    $('#popup').hide();
                }, 3000);
            }

            // Filter table rows based on search input
            $('#searchInput').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#taskTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

<style>
    /* CSS to display buttons in the same row */
    .action-buttons {
        display: flex;
        gap: 5px; /* Adjust spacing between buttons as needed */
    }

    .popup {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #4CAF50; /* Green color */
        color: white; /* Text color */
        font-weight: bold; /* Bold text */
        padding: 15px;
        border-radius: 5px;
        z-index: 9999;
    }
</style>
